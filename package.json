{
  "version": "2.2.0",
  "name": "kalliope",
  "description": "A Discord music bot that still supports most platforms.",
  "homepage": "https://kalliope.cc",
  "author": "Meridian",
  "license": "GPL-3.0-only",
  "private": true,
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node .",
    "dev": "npm run build && node --enable-source-maps . development",
    "deploy": "npm run build && node dist/utilities/deployCommands.js",
    "docs": "typedoc",
    "prepare": "husky",
    "release": "commit-and-tag-version --skip.changelog --releaseCommitMessageFormat \"chore: release %s\""
  },
  "main": "dist/main.js",
  "type": "module",
  "engines": {
    "node": ">=20.0"
  },
  "//": "Remove this override when updating discord.js",
  "overrides": {
    "discord-api-types": "0.37.101"
  },
  "dependencies": {
    "@discordjs/rest": "^2.4.0",
    "canvas": "^2.11.2",
    "discord.js": "^14.16.3",
    "dotenv": "^16.4.5",
    "genius-lyrics": "^4.4.7",
    "imagescript": "^1.3.0",
    "js-yaml": "^4.1.0",
    "lavalink-client": "github:tomato6966/lavalink-client",
    "node-fetch": "^3.3.2",
    "puppeteer": "^23.5.2",
    "spotify-url-info": "^3.2.17",
    "ws": "^8.18.0",
    "ytdl-core": "^4.11.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.12.0",
    "@stylistic/eslint-plugin": "^2.9.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.7.5",
    "commit-and-tag-version": "^12.5.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.12.0",
    "eslint-plugin-jsdoc": "^50.3.1",
    "globals": "^15.11.0",
    "husky": "^9.1.6",
    "kalliope-server": "github:MeridianGH/kalliope-server#649d3231e1e8d999dfdc3cb6dd6f7f9f04c81736",
    "typedoc": "^0.26.8",
    "typedoc-plugin-extras": "^3.1.0",
    "typedoc-theme-hierarchy": "^5.0.3",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.8.1"
  }
}
